<Window x:Class="PictureToAscii.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PictureToAscii"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--#region Top-->
        <!--Right side-->
        <!--#region RightSide-->

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Canvas>
                </Canvas>
            </Grid>
            <Grid Grid.Row="1">
                <Button x:Name="PicBtn" Click="PicBtn_Click">
                    Select img
                </Button>
            </Grid>
            <Border BorderThickness="1"
        BorderBrush="Black"
        Margin="10"
        Grid.Row="0">
                <Image x:Name="DisplayPic"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <!--#endregion-->

        <!--Left side-->
        <!--#region LeftSide-->
        <Grid x:Name="ButtonCanvasGrid" Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10, 25" 
                      x:Name="FontPicker" 
                      SelectedIndex="7"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      FontSize="35"
                      ToolTip="Select Font"   
                      ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}"
                      DisplayMemberPath="Source" 
                      SelectionChanged="FontPicker_SelectionChanged"
                      />
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" Margin="10,0,0,0" x:Name="AsciiPicker" FontFamily="{Binding ElementName=FontPicker, Path=SelectedItem}" TextChanged="AsciiPicker_TextChanged" ScrollViewer.CanContentScroll="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="20"/>
                <Label Grid.Row="1" HorizontalContentAlignment="Right" Foreground="#FF868686">If left blank, it will use preset characters</Label>

            </Grid>
            <Slider x:Name="AsciiGridSizeSlider" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10" Maximum="1000" Minimum="30" Value="120" ValueChanged="AsciiGridSizeSlider_ValueChanged" SmallChange="1" Ticks="1000"/>
            <TextBox Grid.Row="2" Grid.Column="3" Margin="10, 35, 75, 35" x:Name="SizePicker" LostFocus="SizePicker_LostFocus" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="120" TextChanged="SizePicker_TextChanged"/>

        </Grid>
        <!--#endregion-->
        <!--#endregion-->
        <!--#region Bottom-->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Button x:Name="StartBtn" Click="StartBtn_Click">
                Start
            </Button>
        </Grid>

        <!--#endregion-->
    </Grid>
</Window>
